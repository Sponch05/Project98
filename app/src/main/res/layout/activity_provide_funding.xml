<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="za.co.sponchware.www.connectedyouth.ProvideFundingActivity">

    <TextView
        android:id="@+id/who2FundTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I want to fund"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="35dp" />

    <Spinner
        android:id="@+id/opt2Fund"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="97dp" />

    <TextView
        android:id="@+id/myInterestsTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Interests"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="143dp" />

    <ScrollView
        android:layout_width="177dp"
        android:layout_height="118dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="172dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Computers Tech" />

            <CheckBox
                android:id="@+id/checkBox6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agriculture" />

            <CheckBox
                android:id="@+id/checkBox7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Social Upliftment" />

            <CheckBox
                android:id="@+id/checkBox8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sports" />

            <CheckBox
                android:id="@+id/checkBox9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Other" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/fundPledge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I want to pledge "
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="308dp" />

    <SeekBar
        android:id="@+id/amtSeekBar"
        android:layout_width="269dp"
        android:layout_height="47dp"
        android:visibility="visible"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="335dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make a difference"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="418dp" />

</android.support.constraint.ConstraintLayout>
