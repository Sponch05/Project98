<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="za.co.sponchware.www.connectedyouth.GetFundingActivity">

    <TextView
        android:id="@+id/personSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am a "
        android:textSize="30sp"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="16dp" />

    <Spinner
        android:id="@+id/personType"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="64dp" />

    <EditText
        android:id="@+id/pTypeOEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter if other"
        android:inputType="textPersonName"
        android:text="Other"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="98dp" />

    <TextView
        android:id="@+id/fundOptTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am funding for "
        android:textSize="30sp"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="159dp" />

    <Spinner
        android:id="@+id/fundOptSpinner"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="209dp" />

    <EditText
        android:id="@+id/fundReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text|textLongMessage"
        android:text="Why do i need the funds?"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="247dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="346dp"
        android:layout_height="72dp"
        android:text="Amount Needed (R1000 Min and R100000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="303dp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="241dp"
        android:layout_height="24dp"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="396dp" />

    <Button
        android:id="@+id/getFundBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Funding"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="436dp" />

</android.support.constraint.ConstraintLayout>
