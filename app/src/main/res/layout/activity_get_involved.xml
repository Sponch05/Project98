<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="za.co.sponchware.www.connectedyouth.get_involved">

    <ImageButton
        android:id="@+id/crimeBtn"
        android:layout_width="286dp"
        android:layout_height="93dp"
        android:scaleType="fitXY"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/crime_prevention"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/crowdFbtn"
        tools:layout_editor_absoluteX="61dp" />

    <ImageButton
        android:id="@+id/crowdFbtn"
        android:layout_width="288dp"
        android:layout_height="78dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/crowdfunding2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/sports" />

    <ImageButton
        android:id="@+id/sports"
        android:layout_width="294dp"
        android:layout_height="93dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/pic2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="17dp"
        app:layout_constraintBottom_toTopOf="@+id/memBtn" />

    <ImageButton
        android:id="@+id/memBtn"
        android:layout_width="280dp"
        android:layout_height="79dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/stepupget_tested_003"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="74dp" />

</android.support.constraint.ConstraintLayout>
