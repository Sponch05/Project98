<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="za.co.sponchware.www.connectedyouth.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="399dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="-190dp">

            <TextView
                android:id="@+id/getInvolvedTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Involoved"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@android:color/holo_blue_dark" />

            <ImageButton
                android:id="@+id/getInvolvedBtn"
                android:layout_width="382dp"
                android:layout_height="304dp"
                android:background="@android:color/background_light"
                android:backgroundTint="@android:color/background_light"
                android:onClick="getInvolvedBtn"
                android:scaleType="centerInside"
                android:visibility="visible"
                app:srcCompat="@drawable/picture1" />

            <TextView
                android:id="@+id/learnTxtV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Learn/Awareness"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@android:color/holo_blue_dark" />

            <ImageButton
                android:id="@+id/learnBtn"
                android:layout_width="match_parent"
                android:layout_height="403dp"
                android:background="@android:color/background_light"
                android:backgroundTint="@android:color/background_light"
                android:visibility="visible"
                app:srcCompat="@drawable/raise_awerness" />

            <TextView
                android:id="@+id/socialMTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Social Media"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@android:color/holo_blue_dark" />

            <ImageButton
                android:id="@+id/socialBtn"
                android:layout_width="match_parent"
                android:layout_height="262dp"
                android:background="@android:color/background_light"
                android:scaleType="fitEnd"
                app:srcCompat="@drawable/social_media" />

            <TextView
                android:id="@+id/myProfileTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@android:color/holo_blue_dark" />

            <ImageButton
                android:id="@+id/imgBtn99"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:backgroundTint="@android:color/background_light"
                app:srcCompat="@drawable/profile_img" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
